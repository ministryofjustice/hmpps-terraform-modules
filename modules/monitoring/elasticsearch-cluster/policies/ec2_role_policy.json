{
    "Version": "2012-10-17",
    "Statement": [
                {
            "Sid": "ec2InstanceRole",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "allowLoggingToCloudWatch",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogStreams"
            ],
            "Resource": [
                "arn:aws:logs:*:*:*"
            ]
        },        
        {
            "Sid": "ListAllBuckets",
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets"
            ],
            "Resource": [
                "arn:aws:s3:::*"
            ]
        },
        {
            "Sid": "allowAccessToS3Buckets",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::${s3-config-bucket}",
                "arn:aws:s3:::${s3-config-bucket}/*",
                "arn:aws:s3:::${elasticsearch-backup-bucket}",
                "arn:aws:s3:::${elasticsearch-backup-bucket}/*"
            ]
        },
        {
            "Effect": "Allow",
            "Sid": "allowSSMReadOnly",
            "Action": [
                "ssm:Describe*",
                "ssm:Get*",
                "ssm:List*"
            ],
            "Resource": "*"
        }
    ]
}