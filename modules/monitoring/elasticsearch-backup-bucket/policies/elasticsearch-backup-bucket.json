{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowBucketAccess",
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "arn:aws:s3:::${bucket}",
                "arn:aws:s3:::${bucket}/*"
            ],
            "Condition": {
                "IpAddress": {
                    "aws:SourceIp": "${vpc_cidr}"
                }
            }
        }
    ]
}